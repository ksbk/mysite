root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.html]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,json,css,scss,yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2
end_of_line = lf
